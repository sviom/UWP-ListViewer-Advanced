<Page
    x:Class="ListScrollResearch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListScrollResearch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20,10,0,0">
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,10">
            ListView Research
        </TextBlock>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock VerticalAlignment="Center" Margin="0,0,20,0">테스트를 원하는 개수</TextBlock>
            <TextBox x:Name="SettingTestCount" InputScope="Number" PlaceholderText="적힌 만큼 테스트케이스를 생성합니다."></TextBox>
        </StackPanel>
        <Button x:Name="ListPageMove" Click="ListPageMove_Click" Margin="0,0,0,10">Move to Test page</Button>
    </StackPanel>
</Page>
