<Page
    x:Class="ListScrollResearch.ListResearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListScrollResearch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <CollectionViewSource x:Name="TestListViewCollection" IsSourceGrouped="True"></CollectionViewSource>
    </Page.Resources>
    
    <StackPanel>
        <ListView x:Name="TestListView" ItemsSource="{x:Bind TestListViewCollection.View}" Height="300"
                  ContainerContentChanging="TestListView_ContainerContentChanging"
                  Loaded="TestListView_Loaded">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:DateTest">
                    <StackPanel>
                        <!--<TextBlock Text="{Binding Date}"></TextBlock>-->
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </StackPanel>                    
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate x:DataType="local:DateGroup">
                            <TextBlock Text="{x:Bind Key}" Style="{ThemeResource TitleTextBlockStyle}"></TextBlock>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        <Button x:Name="BackToMain" Click="BackToMain_Click">Back to Main page</Button>
        <TextBlock x:Name="ContentChangeTest"></TextBlock>
        <ListView ItemsSource="{x:Bind NowRenderedList}" Height="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock x:Name="NowCount"></TextBlock>
    </StackPanel>
</Page>
